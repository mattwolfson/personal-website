{
  "name": "mattwolfson-website",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "7.4.0",
    "npm": "4.0.5"
  },
  "scripts": {
    "start": "node ./bin/www",
    "dev": "set NODE_ENV=development&& webpack --config webpack.config.dev.js && node ./bin/www",
    "prod": "set NODE_ENV=production&& webpack --config webpack.config.prod.js && node ./bin/www",
    "build:deleteOld": "del-cli public/js/app && webpack --config webpack.config.dev.js --progress --profile --watch",
    "build": "webpack --config webpack.config.dev.js --progress --profile --watch",
    "build:prod": "del-cli public/js/app && ngc-w -p tsconfig.aot.json --webpack webpack.config.prod.js  && webpack --config webpack.config.prod.js --progress --profile --bail && del-cli public/js/app/**/*.js public/js/app/**/*.js.map !public/js/app/bundle.js !public/js/app/*.chunk.js assets/**/**/*.ngfactory.ts assets/**/**/*.ngsummary.ts assets/**/**/*.shim.ts assets/**/**/*.ngsummary.json assets/**/**/*.ngstyle.ts && call prod_builds/getBuildName.bat"
  },
  "dependencies": {
    "@angular/animations": "^4.0.0",
    "@angular/common": "^4.0.0",
    "@angular/compiler": "^4.0.0",
    "@angular/compiler-cli": "^4.0.0",
    "@angular/core": "^4.0.0",
    "@angular/forms": "^4.0.0",
    "@angular/http": "^4.0.0",
    "@angular/platform-browser": "^4.0.0",
    "@angular/platform-browser-dynamic": "^4.0.0",
    "@angular/platform-server": "^4.0.0",
    "@angular/router": "^4.0.0",
    "@angular/upgrade": "^4.0.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "~1.15.2",
    "cookie-parser": "~1.4.3",
    "core-js": "^2.4.1",
    "debug": "~2.2.0",
    "express": "~4.14.0",
    "hbs": "~3.1.0",
    "jsonwebtoken": "^7.4.2",
    "mongoose": "^4.10.8",
    "mongoose-unique-validator": "^1.0.5",
    "morgan": "~1.6.1",
    "reflect-metadata": "^0.1.3",
    "rxjs": "^5.2.0",
    "serve-favicon": "~2.3.0",
    "zone.js": "^0.8.5"
  },
  "devDependencies": {
    "@angular/cli": "^1.3.1",
    "@types/core-js": "0.9.36",
